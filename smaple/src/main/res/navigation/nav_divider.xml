    android:id="@+id/nav_divider.xml"
    app:startDestination="@id/linearHorizontalFragment">

    <fragment
        android:id="@+id/linearHorizontalFragment"
        android:name="com.drake.brv.sample.ui.fragment.divider.LinearHorizontalDividerFragment"
        android:label="线性列表-水平分割线"
        tools:layout="@layout/fragment_linear_horizontal_divider" />
    <fragment
